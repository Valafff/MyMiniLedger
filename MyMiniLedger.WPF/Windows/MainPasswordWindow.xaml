<Window x:Class="MyMiniLedger.WPF.Windows.MainPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMiniLedger.WPF.Windows"
        mc:Ignorable="d"
        Title="Окно авторизации" Height="150" Width="380"
         WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Closed="Window_Closed">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <PasswordBox x:Name="PassBox" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" PreviewKeyDown="Window_PreviewKeyDown" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="bt_Ok" Content="OK" Margin="10" Click="bt_Ok_Click"/>
            <Button Grid.Column="1" x:Name="bt_ResetPathToBD" Content="Задать путь к БД" Margin="10" Click="bt_ResetPathToBD_Click"/>
            <Button Grid.Column="2" x:Name="bt_Exit" Content="Выход" Margin="10" Click="bt_Exit_Click" />
        </Grid>
    </Grid>
</Window>
